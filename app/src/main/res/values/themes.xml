<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.BookingKonsultasiApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- Warna utama aplikasi -->
        <item name="colorPrimary">@color/dark_green</item>
        <item name="colorPrimaryVariant">@color/medium_green</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Warna sekunder -->
        <item name="colorSecondary">@color/creamy_yellow</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Warna status bar -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Atribut warna kustom untuk tema terang -->
        <item name="mainBackgroundColor">@color/off_white</item>
        <item name="headerColor">@color/dark_green</item>
        <item name="buttonColor">@color/medium_green</item>
        <item name="mainTextColor">@color/black</item>
        <item name="secondaryTextColor">@color/text_secondary</item>
    </style>

    <style name="Theme.BookingKonsultasiApp" parent="Base.Theme.BookingKonsultasiApp" />

    <!-- Style untuk TextInputLayout agar terlihat seperti EditText biasa -->
    <style name="Widget.App.TextInputLayout.Underline" parent="Widget.Material3.TextInputLayout.FilledBox">
        <item name="boxBackgroundColor">@android:color/transparent</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="hintEnabled">false</item>
    </style>

    <!-- Style dasar untuk Alert Dialog -->
    <style name="App.Dialog.Alert" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <!-- Properti umum bisa ditaruh di sini jika ada -->
    </style>

    <!-- Tema mini (Overlay) yang Didedikasikan untuk Toolbar -->
    <style name="App.ThemeOverlay.Toolbar" parent="">
        <!-- Mengatur warna ikon (titik tiga, tombol kembali, dll.) menjadi warna kontras -->
        <item name="colorControlNormal">?attr/colorOnPrimary</item>
        <!-- Mengatur warna teks judul menjadi warna kontras -->
        <item name="android:textColorPrimary">?attr/colorOnPrimary</item>
    </style>

</resources>
