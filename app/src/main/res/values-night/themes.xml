<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme for night mode. -->
    <style name="Base.Theme.BookingKonsultasiApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <!-- Warna utama aplikasi -->
        <item name="colorPrimary">@color/dark_green</item>
        <item name="colorPrimaryVariant">@color/medium_green</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Warna sekunder -->
        <item name="colorSecondary">@color/creamy_yellow</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Warna status bar -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Atribut warna kustom untuk tema gelap -->
        <item name="mainBackgroundColor">#121212</item> <!-- Background gelap standar Material Design -->
        <item name="headerColor">@color/dark_green</item>
        <item name="buttonColor">@color/medium_green</item>
        <item name="mainTextColor">@color/white</item>
        <item name="secondaryTextColor">#B3FFFFFF</item> <!-- Putih dengan transparansi 70% -->
    </style>
    <style name="App.Dialog.Alert" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <!-- Mengubah warna teks tombol menjadi warna sekunder (kuning) agar kontras -->
        <item name="buttonBarPositiveButtonStyle">@style/App.Widget.Dialog.Button</item>
        <item name="buttonBarNegativeButtonStyle">@style/App.Widget.Dialog.Button</item>
        <item name="buttonBarNeutralButtonStyle">@style/App.Widget.Dialog.Button</item>
    </style>

    <style name="App.Widget.Dialog.Button" parent="Widget.Material3.Button.TextButton.Dialog">
        <item name="android:textColor">?attr/colorSecondary</item>
    </style>
</resources>
