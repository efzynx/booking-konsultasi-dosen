<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Warna background utama, diambil dari tema -->
    <item android:drawable="?attr/headerColor" />

    <!-- Bentuk gelombang (oval) dengan warna background utama dari tema -->
    <item
        android:bottom="-60dp"
        android:left="-100dp"
        android:right="-100dp"
        android:top="150dp">
        <shape android:shape="oval">
            <solid android:color="?attr/mainBackgroundColor" />
        </shape>
    </item>
</layer-list>
