<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Warna background utama -->
    <item android:drawable="@color/dark_green" />

    <!-- Bentuk gelombang kustom -->
    <item>
        <shape android:shape="rectangle">
            <!-- Path data ini menciptakan kurva -->
            <path
                android:fillColor="@color/off_white"
                android:pathData="M0,200 Q100,250 200,200 T400,200 V400 H0 Z" />
        </shape>
    </item>

    <!-- Versi yang lebih sederhana menggunakan oval -->
    <item
        android:bottom="0dp"
        android:left="-100dp"
        android:right="-100dp"
        android:top="150dp">
        <shape android:shape="oval">
            <solid android:color="@color/off_white" />
        </shape>
    </item>
</layer-list>
